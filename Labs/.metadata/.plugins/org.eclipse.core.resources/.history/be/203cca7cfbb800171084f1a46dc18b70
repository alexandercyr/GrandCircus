import java.util.Scanner;
import java.lang.Math;

public class SizeOfRoom {

	public static void main(String[] args) {

		double length = 0;
		double width = 0;

		String continueRun = "0";

		Scanner scnr = new Scanner(System.in);

		System.out.println("Welcome to Grand Circus' Room Detail Generator!");
		System.out.println();

		while (!continueRun.equals("n") && !continueRun.equals("N")) {
			// Get length from user
			System.out.print("Enter Length: ");	
			//Check if next input has a double
			while (!scnr.hasNextDouble() && scnr.nextDouble() <= 0) {
				System.out.println("Invalid entry. Try again.");
				System.out.print("Enter Length: ");
				scnr.next();
			}
			length = scnr.nextDouble();

			// Get width from user
			System.out.print("Enter Width: ");
			//Check if next input has a double
			while (!scnr.hasNextDouble() && scnr.nextDouble() > 0) {
				System.out.println("Invalid entry. Try again.");
				System.out.print("Enter Width: ");
				scnr.next();
			}
			width = scnr.nextDouble();


			calculateRoomSize(length, width);

			System.out.println("Continue? (y/n): ");
			while (!scnr.hasNext("[yYnN]") ) {
				System.out.println("Invalid entry.");
				System.out.print("Continue? (y/n): ");
				scnr.next();
			}
			continueRun = scnr.next();
		}
		System.out.println("Program terminated.");

	}

	public static void calculateRoomSize(double length, double width) {

		double area = 0;
		double perimeter = 0;

		area = length * width;
		perimeter = (2 * length) + (2 * width);
		
		area = Math.round(area * 10);
		area = area / 10;
		
		perimeter = Math.round(perimeter * 10);
		perimeter = perimeter / 10;

		System.out.println("Area: " + area);
		System.out.println("Perimeter: " + perimeter);
		System.out.println();

	}

}
